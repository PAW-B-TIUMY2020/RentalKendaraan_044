@model IEnumerable<RentalKendaraan_044.Models.KondisiKendaraan>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm("Index", "Kondisi Kendaraan", FormMethod.Get))
{
<p>
    ID Kondisi Kendaraan: @Html.DropDownList("ktsd", "Pilih ID Kondisi Kendaraan")
    Cari Data: @Html.TextBox("SearchString")
    <input type="submit" value="Filter" />
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamaKondisi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKondisi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKondisi"><i class="fas fa-pen-alt"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdKondisi"><i class="fas fa-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdKondisi"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
