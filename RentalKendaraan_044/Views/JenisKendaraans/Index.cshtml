@model IEnumerable<RentalKendaraan_044.Models.JenisKendaraan>

@{
    ViewData["Title"] = "Index";
}

<h2>Tambah Data Jenis Kendaraan</h2>

<p>
    <a asp-action="Create">Tambah Data Baru</a>
</p>
@using (Html.BeginForm("Index", "JenisKendaraans", FormMethod.Get))
{
    <p>
        Jenis Kendaraan: @Html.DropDownList("ktsd", "Pilih Jenis Kendaraan")
        Cari Data: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Jenis Kendaraan")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaJenisKendaraan)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdJenisKendaraan"><i class="fas fa-pen-alt"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdJenisKendaraan"><i class="fas fa-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdJenisKendaraan"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
